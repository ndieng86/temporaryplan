<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/css/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Rapport de Disponibilités</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row top">
            <%- include('./partials/header') %>
        </div>
    </div>
    <div class="container-fluid contenu" style="padding-top:100px;">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <h1>Rapports de Disponibilités des Experts</h1>
            </div>
            <div class="col-2"></div>
        </div>
        <form action="" class="row" style="padding-top:50px; " id="form">
            <div class="col-6">
                <h4>Terriroires</h4>
            </div>
            <div class="col-3">
                <h4>Services</h4>
            </div>
            <div class="col-2">
                <h4>Forfaits</h4>
            </div>
            <div class="col-1"></div>

            <div class="row" style="margin-bottom:40px;">
                <div class="col-6">
                    <select class="form-control" name="uid_territory" id="uid_territory">
                        <option value="">
                            --------------------------------------------------------choisir un
                            territoire-------------------------------------------------------------------
                        </option>
                        <% for(city of territoires) { %>
                            <option value="<%= city.uid_territory %>">
                                <%=city.area_code %>-<%=city.territory_name %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div class="col-3">
                    <select class="form-control" name="service" id="service">
                        <option value="">
                            --------------------------choisir un
                            service---------------------------
                        </option>
                        <% for(serv of services) { %>
                            <option value="<%=serv.uid%>">
                                <%= serv.name_fr %>
                            </option>
                            <% } %>

                    </select>
                </div>
                <div class="col-2">
                    <select class="form-control" name="forfait" id="forfait">
                        <option value="">-------------choisir un forfait----------------</option>
                        <% for(forfait of forfaits) { %>
                            <option value="<%=forfait.uid%>">
                                <%= forfait.name_fr %>
                            </option>
                            <% } %>

                    </select>
                </div>


            </div>
            <div class="row">
                <div class="col-4"></div>
                <button type="button" class="btn btn-info col-1" id="filter">Filtrer</button>
                <div class="col-1"></div>
                <button type="button" class="btn btn-danger col-1" id="reset">Reset</button>
                <div class="col-4"></div>
            </div>
        </form>
        <div class="row" style="padding-top:50px; padding-bottom: 50px; ">

            <table class="col-12">
                <thead class="thead-dark">
                    <th scope="col">Territoire</th>
                    <th scope="col">service</th>
                    <th scope="col">forfait</th>
                    <th scope="col">UID Expert</th>
                    <th scope="col">Debut</th>
                    <th scope="col">Fin</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Payé</th>
                </thead>
                <tbody id="rapport">

                </tbody>
            </table>
            <div class="row">
                <div class="col-7"></div>
                <div class="col-2" id="NombreExpert">

                </div>
                <div class="col-3" id="revenu">

                </div>
            </div>
        </div>


    </div>
    </div>

    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous">
        </script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    -->

    <script>
        $(document).ready(function () {

            $("#filter").click(function (event) {
                event.preventDefault();
                var dataExpert = {
                    uid_territory: $("#uid_territory").val(),
                    service: $("#service").val(),
                    forfait: $("#forfait").val()

                };

                $.ajax({
                    type: 'GET',
                    url: '/readexpert',
                    data: dataExpert,
                    success: function (data) {

                        console.log(data.datafilter)
                        var rapport = ""
                        var price = 0;
                        var NombreExpert = 0;
                        for (i = 0; i < data.datafilter.length; i++) {

                            NombreExpert += 1;
                            rapport += "<tr><td>" +
                                data
                                    .datafilter[i].area_code + "-" + data.datafilter[i]
                                    .territory_name + "</td><td>" + data.datafilter[i]
                                    .service + "</td><td>" + data
                                        .datafilter[i]
                                    .forfait +
                                "</td><td>" + data.datafilter[i].uid_contractor +
                                "</td><td>" + data.datafilter[i].start + "</td><td>" +
                                data.datafilter[i].end + "</td><td>$" + data
                                    .datafilter[i].month_price +
                                "</td><td id='colorpaid'>" + data.datafilter[i].paid +
                                "</td></tr>"
                            price += data.datafilter[i].month_price;


                        }
                        $("#rapport").html(rapport)
                        $("#revenu").html("<h2>Revenu Mensuel:$" + price + "</h2>")
                        $("#NombreExpert").html("<h2>Nombre Expert:" + NombreExpert +
                            "</h2>")
                    },
                    error: function (err) {
                        console.log(error)
                    }
                })


            })
            $("#reset").click(function (event) {
                event.preventDefault();
                $("#uid_territory").val(null);
                $("#service").val(null);
                $("#forfait").val(null);

                $("#rapport").html('');
                $("#NombreExpert").html('');
                $("#revenu")
                    .html('')
            })

        })
    </script>
</body>

</html>