<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/css/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>project-</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row top">
            <%- include('./partials/header') %>
        </div>
    </div>
    <div class="rows-fluid contenu">

        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <div class="row">
                    <div class="col-12">
                        <h2>Détail du projet N°:<%= unickproject[0].uidproject%>
                        </h2>
                    </div>
                </div>
                <div class="row">
                    <table class="table" id="table_vue">
                        <thead>
                            <tr>
                                <th>UID Client</th>
                                <th>Nom du Client</th>
                                <th>Email</th>
                                <th>Telephone</th>
                                <th>Langue</th>
                                <th>Contact</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <%= unickproject[0].uidclient%>
                                </td>
                                <td>
                                    <%= unickproject[0].firstname %>-<%=- unickproject[0].lastname%>
                                </td>
                                <td>
                                    <%= unickproject[0].email%>
                                </td>
                                <td>
                                    <%= unickproject[0].phone1%>
                                </td>
                                <td>
                                    <%= unickproject[0].lang%>
                                </td>
                                <td>
                                    <%= unickproject[0].contact%>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <table class="table" id="table_vue">
                        <thead>
                            <tr>
                                <th>Adresse</th>
                                <th>Service</th>
                                <th>Status</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <%= unickproject[0].street_no%>
                                        <%= unickproject[0].street%>
                                            <%= unickproject[0].city%>
                                                <%= unickproject[0].province%>
                                                    <%= unickproject[0].zip%>
                                </td>
                                <td>
                                    <%= unickproject[0].uid_service%>
                                </td>
                                <td>
                                    <%= unickproject[0].status%>
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-4">
                        <table class="table" id="table_vue">
                            <thead>
                                <tr>
                                    <th class="scope">Prix </th>
                                    <th class="scope">Nombre de Soumission</th>
                                    <th class="scope">UID Pipedrive</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <%= unickproject[0].lead_price%>
                                    </td>
                                    <td>
                                        <%= unickproject[0].max_quotes%>
                                    </td>
                                    <td>
                                        <%= unickproject[0].uid_deal_pipedrive%>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="row">
                    <h4>Description:</h4>
                    <p>
                        <%= unickproject[0].description%>
                    </p>
                </div>
                <div class="row">
                    <div class="col-11"></div>
                    <div class="col-1">
                        <a href="/editProject/<%= unickproject[0].uidproject%>" class="btn"
                            style="background-color: #2C7FC1; color: white;text-align: right;">Modifier</a>
                    </div>
                </div>
            </div>
            <div class="col-1"></div>
        </div>

    </div>

</body>

</html>